    "buyer_representation_agreement": {
      "form_name": "Buyer_Representation_and_Broker_Compensation_Agreement",
      "common_usage": "Essential - Required before showing any property",
      "pages": 13,
      "mappings": {
        "client_name": {
          "crm_source": "clients.first_name + ' ' + clients.last_name",
          "field_type": "text",
          "required": true,
          "category": "client_info",
          "description": "Full legal name of buyer client"
        },
        "client_address": {
          "crm_source": "clients.mailing_address_line1 + ', ' + clients.mailing_city + ', ' + clients.mailing_state + ' ' + clients.mailing_zip_code",
          "field_type": "text",
          "required": true,
          "category": "client_info",
          "description": "Client's complete mailing address"
        },
        "client_phone": {
          "crm_source": "clients.phone",
          "field_type": "text",
          "required": true,
          "category": "client_info",
          "description": "Primary contact phone number"
        },
        "client_email": {
          "crm_source": "clients.email",
          "field_type": "text",
          "required": true,
          "category": "client_info",
          "description": "Primary email address"
        },
        "spouse_name": {
          "crm_source": "clients.spouse_name",
          "field_type": "text",
          "required": false,
          "category": "client_info",
          "description": "Spouse or co-buyer name if applicable"
        },
        "emergency_contact": {
          "crm_source": "clients.emergency_contact_name",
          "field_type": "text",
          "required": false,
          "category": "client_info",
          "description": "Emergency contact information"
        },
        "price_range_min": {
          "crm_source": "clients.pre_approval_amount * 0.8",
          "field_type": "currency",
          "required": false,
          "category": "search_criteria",
          "description": "Minimum price range for property search"
        },
        "price_range_max": {
          "crm_source": "clients.pre_approval_amount",
          "field_type": "currency",
          "required": false,
          "category": "search_criteria",
          "description": "Maximum approved purchase amount"
        },
        "representation_start_date": {
          "crm_source": "current_date",
          "field_type": "date",
          "required": true,
          "category": "agreement_terms",
          "description": "Start date of representation agreement"
        },
        "representation_end_date": {
          "crm_source": "current_date + 90_days",
          "field_type": "date",
          "required": true,
          "category": "agreement_terms",
          "description": "Expiration date of representation"
        },
        "agent_name": {
          "crm_source": "agents.first_name + ' ' + agents.last_name",
          "field_type": "text",
          "required": true,
          "category": "agent_info",
          "description": "Buyer's agent full name"
        },
        "agent_license": {
          "crm_source": "agents.license_number",
          "field_type": "text",
          "required": true,
          "category": "agent_info",
          "description": "Agent license number"
        },
        "brokerage_name": {
          "crm_source": "agents.brokerage",
          "field_type": "text",
          "required": true,
          "category": "agent_info",
          "description": "Agent's brokerage firm"
        },
        "commission_rate": {
          "crm_source": "agents.commission_split",
          "field_type": "percentage",
          "required": true,
          "category": "compensation",
          "description": "Agreed commission percentage"
        }
      }
    },
    
